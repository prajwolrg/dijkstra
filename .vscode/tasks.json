            "command": "g++",
            "args": [
                "-g",
                "${fileDirname}\\*.cpp",
                "-IC:\\Development_Tools\\SFML-2.5.1\\include",
                "-IC:\\Development_Tools\\TGUI-0.8\\include",
                "-LC:\\Development_Tools\\SFML-2.5.1\\lib",
                "-LC:\\Development_Tools\\TGUI-0.8\\lib",
                "-lsfml-graphics",
                "-lsfml-window",
                "-lsfml-system",
                "-lsfml-network",
                "-ltgui"
            ]
        }
    ]
}